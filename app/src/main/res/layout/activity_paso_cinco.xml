<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".View.ejercicioParte2.PasoCincoActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCostoVentas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="39dp"
            android:Alignment="center"
            android:background="@drawable/bordes"
            android:text="@string/name_account11"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/vUtilidad"
            app:layout_constraintEnd_toStartOf="@+id/etCostoVentas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvVEntas"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/vUtilidad"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bordes"
            android:text="Utilidad bruta"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/etUtilidad"
            app:layout_constraintEnd_toStartOf="@+id/etUtilidad"
            app:layout_constraintStart_toStartOf="@+id/tvCostoVentas"
            app:layout_constraintTop_toTopOf="@+id/etUtilidad" />

        <EditText
            android:id="@+id/etUtilidad"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bordes"
            android:ems="10"
            android:inputType="number"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCostoVentas"
            app:layout_constraintTop_toBottomOf="@+id/etCostoVentas" />

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>

        <TextView
            android:id="@+id/tvPaso2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bordes"
            android:text="@string/Step_5"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitulo" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:text="@string/Step_tittle"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

        <include
            android:id="@+id/include2"
            layout="@layout/fragment_acreedores_diversos" />

        <Button
            android:id="@+id/btnHacerSuma"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:background="@color/colorBlue"
            android:text="Hacer sumas"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etUtilidad" />

        <Button
            android:id="@+id/btnGuardarDatos"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorGreenDark"
            android:text="Guardar Datos"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="286dp" />

        <TextView
            android:id="@+id/tvVEntas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="39dp"
            android:background="@drawable/bordes"
            android:text="@string/name_account12"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvCostoVentas"
            app:layout_constraintEnd_toEndOf="@+id/tvCostoVentas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etVEntas" />

        <EditText
            android:id="@+id/etVEntas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bordes"
            android:ems="10"
            android:inputType="number"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/etCostoVentas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvVEntas"
            app:layout_constraintTop_toBottomOf="@+id/tvPaso2" />

        <EditText
            android:id="@+id/etCostoVentas"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bordes"
            android:ems="10"
            android:inputType="number"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/etUtilidad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCostoVentas"
            app:layout_constraintTop_toBottomOf="@+id/etVEntas" />

        <TextView
            android:id="@+id/tvmas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bordes"
            android:text="(+)"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/vUtilidad"
            app:layout_constraintEnd_toEndOf="@+id/tvmas2"
            app:layout_constraintStart_toStartOf="@+id/tvmas2"
            app:layout_constraintTop_toBottomOf="@+id/tvmas2" />

        <TextView
            android:id="@+id/tvmas2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bordes"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/tvCostoVentas"
            app:layout_constraintEnd_toStartOf="@+id/tvVEntas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPaso2" />

        <TextView
            android:id="@+id/tvmenos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bordes"
            android:text="(-)"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/vUtilidad"
            app:layout_constraintEnd_toStartOf="@+id/vUtilidad"
            app:layout_constraintStart_toStartOf="@+id/tvmas"
            app:layout_constraintTop_toBottomOf="@+id/tvmas" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

