<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <TextView
            android:id="@+id/tvtittle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/Step_tittle"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

        <TextView
            android:id="@+id/tvpaso1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/Step_1"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvtittle" />

        <Button
            android:id="@+id/btnGuardarDatos"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorGreenDark"
            android:text="Guardar Datos"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp"
            android:text=" "
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/tvVEntas"
            app:layout_constraintStart_toStartOf="@+id/tvpaso1"
            app:layout_constraintTop_toTopOf="@+id/tvVEntas" />

        <TextView
            android:id="@+id/tvVEntas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="75dp"
            android:text="Ventas"
            app:layout_constraintBottom_toTopOf="@+id/etCostoVentasP5"
            app:layout_constraintEnd_toStartOf="@+id/etventasP5"
            app:layout_constraintStart_toStartOf="@+id/tvpaso1"
            app:layout_constraintTop_toTopOf="@+id/etventasP5" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="(-)"
            app:layout_constraintBottom_toTopOf="@+id/tvUtilidad"
            app:layout_constraintEnd_toStartOf="@+id/tvCostoVentas"
            app:layout_constraintHorizontal_bias="0.689"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/tvCostoVentas"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:text="Costo de ventas"
            app:layout_constraintBottom_toTopOf="@+id/etUtilidadP5"
            app:layout_constraintEnd_toStartOf="@+id/etCostoVentasP5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvVEntas"
            app:layout_constraintTop_toTopOf="@+id/etCostoVentasP5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="(=)"
            app:layout_constraintBottom_toBottomOf="@+id/tvUtilidad"
            app:layout_constraintEnd_toStartOf="@+id/tvUtilidad"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvUtilidad"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Utilidad bruta"
            app:layout_constraintBottom_toBottomOf="@+id/etUtilidadP5"
            app:layout_constraintEnd_toStartOf="@+id/etUtilidadP5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvCostoVentas"
            app:layout_constraintTop_toTopOf="@+id/etUtilidadP5"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/etventasP5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="45dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/etCostoVentasP5"
            app:layout_constraintEnd_toEndOf="@+id/tvtittle"
            app:layout_constraintStart_toStartOf="@+id/tvpaso1"
            app:layout_constraintTop_toBottomOf="@+id/tvpaso1" />

        <EditText
            android:id="@+id/etCostoVentasP5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/etUtilidadP5"
            app:layout_constraintEnd_toEndOf="@+id/etventasP5"
            app:layout_constraintStart_toStartOf="@+id/etventasP5"
            app:layout_constraintTop_toBottomOf="@+id/etventasP5" />

        <EditText
            android:id="@+id/etUtilidadP5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/etCostoVentasP5"
            app:layout_constraintStart_toStartOf="@+id/etCostoVentasP5"
            tools:layout_editor_absoluteY="245dp" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>